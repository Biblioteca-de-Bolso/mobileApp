<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_blue</item>
        <item name="colorPrimaryVariant">#007AB3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/splash_screen_dark_purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="wheatColor">@color/m_editor_wheat</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyApplication.NoActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_blue</item>
        <item name="colorPrimaryVariant">#007AB3</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="readablePrimaryColor">@color/white_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- tinted navigation -->
        <item name="toolbarNavigationButtonStyle">@style/TintedNavigation</item>
    </style>

    <style name="Theme.LoadingTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#492376</item>
        <item name="colorPrimaryVariant">#492376</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyApplication.PurpleTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gd_blue_purple_1</item>
        <item name="colorPrimaryVariant">#492376</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/splash_screen_dark_purple</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="TintedNavigation" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/gd_blue_purple_4</item>
    </style>

    <style name="MyThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- color used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="purpleTopBarWithNoOverlay" parent="Widget.MaterialComponents.Toolbar.Primary" >
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.MyApplication.TextInputLayout.FilledGray" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@color/text_input_layout_gray_stroke_color</item>
        <item name="android:textColorHint">@color/gray_transparent_60</item>
        <item name="android:editTextStyle">@style/TextInputEditTextFilledGray</item>
    </style>

    <style name="Theme.MyApplication.TextInputLayout.FilledBlack" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@color/text_input_layout_black_stroke_color</item>
        <item name="android:textColorHint">@color/gray_transparent_80</item>
        <item name="android:editTextStyle">@style/TextInputEditTextFilledBlack</item>
    </style>

    <style name="Theme.MyApplication.SplashScreenTheme.TextInputLayout.FilledBlack" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@color/text_input_layout_white_stroke_color</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="Theme.MyApplication.SplashScreenTheme.Blue.TextInputLayout.FilledBlack" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@color/text_input_layout_white_stroke_color</item>
        <item name="android:textColorHint">@color/gd_blue_purple_3</item>
        <item name="android:editTextStyle">@style/Blue.TextInputEditTextFilledBlack</item>
    </style>

    <style name="Theme.MyApplication.SplashScreenTheme.Blue.TextInputLayout.FilledBlack.PurpleUnderline" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@color/text_input_layout_splashscreen_purple_blue_3_stroke_color</item>
        <item name="android:textColorHint">@color/gd_blue_purple_3</item>
        <item name="android:editTextStyle">@style/Blue.TextInputEditTextFilledBlack</item>
        <item name="boxBackgroundColor">@color/splash_screen_dark_purple</item>
    </style>

    <style name="Theme.MyApplication.SplashScreenTheme.Blue.TextInputLayout.FilledBlack.NoUnderline" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="android:textColorHint">@color/gd_blue_purple_3</item>
        <item name="android:editTextStyle">@style/Blue.TextInputEditTextFilledBlack</item>
        <item name="boxBackgroundColor">@color/splash_screen_dark_purple</item>
    </style>


    <style name="Theme.MyApplication.TextInputLayout.FilledBlack.NoUnderline" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@color/text_input_layout_black_stroke_color_no_underline</item>
        <item name="android:textColorHint">@color/gray_transparent_80</item>
        <item name="android:editTextStyle">@style/TextInputEditTextFilledBlack</item>
        <item name="boxBackgroundColor">@color/box_bg_color_white</item>
    </style>

    <style name="Widget.MyApp.TextInputLayout" parent="Widget.Design.TextInputLayout">

    </style>

    <style name="TextInputEditTextFilledGray" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor" override="true">@color/gray_transparent_60</item>
    </style>

    <style name="TextInputEditTextFilledBlack" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor" override="true">@color/gray_transparent_80</item>
    </style>

    <style name="Blue.TextInputEditTextFilledBlack" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor" override="true">@color/gd_blue_purple_3</item>
    </style>

    <style name="SpinnerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>




</resources>